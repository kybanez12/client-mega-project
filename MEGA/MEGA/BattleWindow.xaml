<Page x:Class="MEGA.BattleWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MEGA"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="425"
      Title="BattleWindow" Height="300" Width="525">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="2*"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Name="CharacterName"></TextBlock>

        <StackPanel Grid.Row="1">
            <TextBlock Name="Hp">Hp:</TextBlock>
            <TextBlock Name="Damage">Damage:</TextBlock>
        </StackPanel>
        
        

        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button  Width="80" Height="20" Name="NormalAttackButton" Margin="20" Click="NormalAttackButton_Click">Normal Attack</Button>
            <Button Width="80"  Height="20" Name="SpecialAttackButton" Margin="20">Special Attack</Button>
        </StackPanel>


    </Grid>
    
</Page>
